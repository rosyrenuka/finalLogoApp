<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="178dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

<ImageView
    android:layout_width="175dp"
    android:layout_height="180dp"
    android:background="#000000"
    android:layout_marginRight="5dp"
    android:id="@+id/image_view"
    />

<TextView
    android:layout_width="173dp"
    android:layout_height="60dp"
    android:textSize="16dp"
    android:background="#F3F3E2"
    android:text="Title type"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="5dp"
    android:textStyle="bold"
    android:id="@+id/title"
    />

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="8dp"
        android:background="#F3F3E2"></LinearLayout>


<TextView
    android:layout_width="173dp"
    android:layout_height="75dp"
    android:text="description"
    android:layout_marginLeft="2dp"
    android:textStyle="italic"
    android:background="#F3F3E2"
    android:textSize="15dp"
    android:id="@+id/description"
    />

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        android:background="#F3F3E2">



        <RatingBar
            android:layout_width="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/rating"
            android:max="5"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:rating="5"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:background="#F3F3E2"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="175dp"
            android:layout_height="20dp"
            android:textColor="#E0115F"
            android:textSize="13dp"
            android:layout_marginTop="15dp"
            android:background="#F3F3E2"
            android:id="@+id/knowmore"
            android:layout_marginLeft="7dp"
            android:text="Know more"/>

    </LinearLayout>

</LinearLayout>