<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.hp.logo.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/paris7"
        android:background="#000000"
        android:id="@+id/background_image"
        />

    <TextView
        android:id="@+id/bigtext"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="16dp"
        android:text="Let's Checkout my application"
        android:textColor="#ffff"
        android:textSize="30dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="300dp"
            android:text="Featured  Applications"
            android:layout_marginLeft="10dp"

            android:textSize="22dp"
            android:textStyle="bold" />

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="20dp"
          android:id="@+id/container"
          >
      </FrameLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:textSize="22dp"
                android:text="Relevant Instruments"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>


            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:id="@+id/viewpager"
                android:layout_marginTop="60dp"
                android:background="#F3F3E2"
                android:layout_height="290dp">

            </android.support.v4.view.ViewPager>

            <ImageButton
                android:id="@+id/left_nav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/baseline_keyboard_arrow_left_black_18dp" />

            <ImageButton
                android:id="@+id/right_nav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/baseline_keyboard_arrow_right_black_18dp" />

        </FrameLayout>

    </LinearLayout>
    <!--upto view pager+slider-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1200dp"
        android:background="#f1e7e6"
        android:layout_height="300dp">



        <ViewFlipper
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:id="@+id/viewflipper">

        </ViewFlipper>



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:layout_marginLeft="200dp"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:contentPaddingTop="5dp"
                app:contentPaddingRight="10dp"
                app:contentPaddingLeft="8dp"
                android:layout_marginTop="30dp"
                app:contentPaddingBottom="5dp"
                app:cardCornerRadius="18dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APPLICATION NOTES"
                        android:id="@+id/name"
                        android:textColor="#007FFF"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/notes"
                        android:text="Fusce condimentum sem sit amet lectus"
                        android:textStyle="italic"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:textSize="13dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>






            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:contentPaddingTop="4dp"
                app:contentPaddingRight="5dp"
                app:contentPaddingLeft="8dp"
                android:layout_marginTop="13dp"
                app:contentPaddingBottom="5dp"
                app:cardCornerRadius="18dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRENDS"
                        android:textColor="#03C03C"
                        android:id="@+id/trends"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fusce condimentum sem sit amet lectus"
                        android:textStyle="italic"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:textSize="13dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:contentPaddingTop="4dp"
                app:contentPaddingRight="5dp"
                app:contentPaddingLeft="8dp"
                android:layout_marginTop="13dp"
                app:contentPaddingBottom="5dp"
                app:cardCornerRadius="18dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INTERVIEWS"
                        android:textColor="#E0115F"
                        android:id="@+id/interviews"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fusce condimentum sem sit amet lectus"
                        android:textStyle="italic"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:textSize="13dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>

</android.support.v4.widget.NestedScrollView>

</RelativeLayout>
